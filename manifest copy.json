{
    "manifest_version": 3,
    "name": "Meta Viewer by Lynkify",
    "version": "1.0",
    "description": "Uncover the hidden insights behind every website.  Instantly reveal titles, descriptions, keywords, images, and favicons with a single click. ️‍️ Experience optimized image loading with WebP support for enhanced performance. ⚡",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        },
        "default_popup": "popup.html",
        "default_title": "Click to view meta details"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}